<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Create a new campground</h1>
    
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Camp Name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="image" placeholder="Enter the url of the image">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="description" placeholder="Enter some description of the camp">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Back to see the list of camps</a>    
    </div>
    
</div>
<% include ../partials/footer %>